<apex:page standardController="Contact">
 <apex:pageMessages />
    <apex:form >
        <apex:pageBlock title="Contact Edit">
                <apex:pageBlockButtons  >
                    <apex:commandButton value="Save" action="{!save}"/>
                    <apex:commandButton value="Save & New" action="{!quicksave}"/>
                    <apex:commandButton value="Cancel" action="{!cancel}"/>
                </apex:pageBlockButtons>
        <apex:pageBlockSection columns="2" title="Contact Informations">
            <apex:outputText value="{! Contact.Owner.Name}" label="Contact Owner"/>
            <apex:inputField value="{! Contact.Phone}"/>
            <apex:inputField value="{! Contact.Salutation}"/>
            <apex:inputField value="{! Contact.HomePhone}"/> 
            <apex:inputField value="{! Contact.firstName}"/>
            <apex:inputField value="{! Contact.MobilePhone}"/>
            <apex:inputField value="{! Contact.lastName}"/>
            <apex:inputField value="{! Contact.OtherPhone}"/>
            <apex:inputField value="{! Contact.AccountId}"/>
            <apex:inputField value="{! Contact.Fax}"/>
            <apex:inputField value="{! Contact.Title}"/>
            <apex:inputField value="{! Contact.Email}"/>
            <apex:inputField value="{! Contact.Department}"/>
            <apex:inputField value="{! Contact.AssistantName}"/>
            <apex:inputField value="{! Contact.Birthdate}"/>
            <apex:inputField value="{! Contact.AssistantPhone}"/>
        </apex:pageBlockSection>  

        <apex:pageBlockSection columns="1">
                 <apex:inputField value="{! Contact.ReportsToId}"/>
                 <apex:inputField value="{! Contact.LeadSource}"/>
                 <apex:inputCheckbox value="{! Contact.Prequalified__c}"/>
                 <apex:inputField value="{! Contact.Loan_Amount__c}"/>
                 <apex:inputCheckbox value="{! Contact.Is_Primary_Contact__c}"/>
                 <apex:inputField value="{! Contact.Primary_Contact_Phone__c}"/>
                  
        </apex:pageBlockSection>                        
            
        </apex:pageBlock> 
        
    </apex:form>
       
</apex:page>